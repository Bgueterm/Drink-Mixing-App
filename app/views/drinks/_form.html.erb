<%= form_for :drink do |f| %>

<p>
  <%= f.label Liquor.name, "Liquor" %><br>
  <%= f.collection_check_boxes :Liquor_ids, Liquor.all, :id, :name %>
</p>

<p>
  <%= f.label Mixer.name, "Mixer" %><br>
  <%= f.collection_check_boxes :Mixer_ids, Mixer.all, :id, :name %>
