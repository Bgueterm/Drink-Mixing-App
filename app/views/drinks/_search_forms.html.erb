<%= form_tag(search_path, method: :get) do %>

<div class="box2">
  <%= label_tag "drinkName", "Drinks by Name" %><br>
  <%= select_tag :drink, options_from_collection_for_select(Drink.all, :id, :name), include_blank: true %>
</div>

<div class="box3">
  <%= label_tag "liquorName", "Liquor" %><br>
  <div id="liquorBoxes">
    <%= collection_check_boxes :liquor, :Liquor_ids, Liquor.all, :id, :name %>
  </div>
</div>

<div class="box2">
  <%= label_tag "mixerName", "Mixer" %><br>
  <div id="mixerBoxes">
    <%= collection_check_boxes :mixer, :Mixer_ids, Mixer.all, :id, :name %>
  </div>
</div>

<div class="box3">
  <%= label_tag "drinkFlavor", "Flavor" %><br>
  <%= select_tag :drink, options_for_select(Drink.flavors), include_blank: true %>
</div>

<div class="Submit">
  <%= submit_tag "Search", class: "btn btn-default" %> 
</div>
<% end %>